<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/img_uin"
        android:layout_width="213dp"
        android:layout_height="207dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:srcCompat="@drawable/ic_uin" />

    <TextView
        android:id="@+id/tv_ppkapps2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PPK Apps"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_uin"
        app:layout_constraintStart_toStartOf="@+id/img_uin"
        app:layout_constraintTop_toBottomOf="@+id/img_uin" />
</androidx.constraintlayout.widget.ConstraintLayout>